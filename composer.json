{
    "name": "stillat/antlers-components",
    "autoload": {
        "psr-4": {
            "Stillat\\AntlersComponents\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stillat\\AntlersComponents\\Tests\\": "tests/"
        }
    },
    "extra": {
        "statamic": {
            "name": "Antlers Components",
            "description": "Provides HTML-like Antlers component tags for Antlers partials, Blade components, and Livewire components."
        },
        "laravel": {
            "providers": [
                "Stillat\\AntlersComponents\\ServiceProvider"
            ]
        }
    },
    "require": {
        "php": "^8.1",
        "stillat/blade-parser": "^1.2",
        "statamic/cms": "^3.3 || ^3.4",
        "laravel/framework": "^9.36"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5 || ^9.0",
        "orchestra/testbench": "*",
        "laravel/pint": "^1.4"
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    }
}
